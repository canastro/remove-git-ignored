{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],

        "no-cond-assign": ["error", "always"],

        "no-console": "off",
    },
    "globals": {
        "describe": true,
        "context": true,
        "it": true,
        "beforeEach": true,
        "afterEach": true
    }
}
